{
  "manifest_version": 2,
  "name": "SD Prompts Checker",
  "version": "2.3",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "exif-reader.js",
        "pako.min.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "https://*/*",
    "http://*/*"
  ]
}