{
  "manifest_version": 2,
  "name": "SD Prompts Checker",
  "version": "2.0",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "128": "128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["exif-reader.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["contextMenus", "https://*/*", "http://*/*"]
}
